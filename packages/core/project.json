{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "core",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "packages/core"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "packages/core"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{projectRoot}/jest.config.ts",
        "{projectRoot}/tsconfig.json"
      ],
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint \"src/**/*.ts\" --config ../../eslint.config.js",
        "cwd": "packages/core"
      },
      "cache": true,
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/eslint.config.js"
      ]
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint \"src/**/*.ts\" --config ../../eslint.config.js --fix",
        "cwd": "packages/core"
      },
      "cache": false,
      "inputs": [
        "default",
        "^default",
        "{workspaceRoot}/eslint.config.js"
      ]
    }
  },
  "tags": ["scope:core", "type:library"]
}

